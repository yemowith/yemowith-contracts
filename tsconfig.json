{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./contracts/*"]
    },

    "outDir": "dist"
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./utils",
    "./utils/_base.ts"
  ],
  "files": ["./hardhat.config.ts", "global.d.ts"]
}
