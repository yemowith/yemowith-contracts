{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*", // Include all files in the src directory
    "scripts/**/*" // Include all files in the scripts directory
  ],
  "files": [
    "src/js/index.ts" // Include only the index.ts file in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory
    "dist", // Exclude dist directory
    "src/**/*.test.ts" // Exclude all test files in the src directory
  ]
}
