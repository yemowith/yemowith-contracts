{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./contracts/*"]
    },

    "outDir": "build/ts"
  },
  "include": [
    "src/scripts",
    "src/test",
    "./typechain-types",
    "src/utils/_base.ts",
    "src/global.d.ts",
    ".archive/utils"
  ],
  "exclude": ["node_modules", "dist", "src/test/Dev", ".archive", "build"],
  "files": ["./hardhat.config.ts", "src/global.d.ts"]
}
