{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {},
    "outDir": "build/ts",
    "rootDir": "src"
  },
  "include": [
    "src/js/**/*",
    "build/typechain",
    "src/js/utils/_base.ts",
    "src/js/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "src/js/test/Dev", ".archive", "build"]
}
