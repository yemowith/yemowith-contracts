{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/js/types"]
  },
  "include": ["src/js/global.d.ts", "./src/js/**/*.ts"],
  "exclude": [
    // "node_modules", // Exclude node_modules directory
    "build" // Exclude dist directory
    //"src/**/*.test.ts", // Exclude all test files in the src directory
    //  ".v1"
  ]
}
